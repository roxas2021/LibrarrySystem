<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LibrarrySystem</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css">

    <link href="~/css/sidebar.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LibrarrySystem.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
</head>
<body>

    <div class="wrapper">
        <div class="sidebar">
            <center>
                <img src="~/lib/lib.jpg" class="profile_image" alt="" />
                <h6>LIBRARRY MANAGEMENT SYSTEM</h6>
            </center>

            <a asp-action="Index" asp-controller="Home"><i class="fas fa-gauge"></i><span>Dashboard</span></a>
            <a asp-action="Index" asp-controller="Home"><i class="fas fa-tent-arrow-left-right"></i><span>Transaction</span></a>
            <a asp-action="Login" asp-controller="Maintenance"><i class="fas fa-book"></i><span>Books</span></a>
            <a asp-action="Login" asp-controller="Maintenance"><i class="fas fa-user-pen"></i><span>Students</span></a>
            <a asp-action="Login" asp-controller="Maintenance"><i class="fas fa-file-lines"></i><span>Reports</span></a>
            <a asp-action="Login" asp-controller="Maintenance"><i class="fas fa-gear"></i><span>Maintenance</span></a>
            
        </div>

        <div class="main_content">

            <div class="header">
                <a>DASHBOARD</a>
                <div style="float: right">Logout</div>
            </div>

            <main role="main" class="body_container">
                @RenderBody()
            </main>

            <footer class="d-flex justify-content-center border">
                <p style="padding-top: 8px">&copy; @DateTime.Now.Year - Librarry Management System (Ferdinand Roxas)</p>
            </footer>

        </div>

    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
